<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qualitas.portal.fraudes.sinisestros.dao.ProveedorDao">
    <resultMap id="ProveedorDTOResultado" type="com.qualitas.portal.fraudes.siniestros.dto.ProveedorDTO">
        <id property="iProveeID" column="I_PROVEE_ID"/>
        <result property="vNombre" column="V_NOMBRE"/>
    </resultMap>

    <insert id="crearProveedor" useGeneratedKeys="true" keyProperty="iProveeID">
        INSERT INTO T_PROVEEDORES (V_NOMBRE)
        VALUES (#{vNombre})
    </insert>

    <update id="actualizarProveedor" parameterType="com.qualitas.portal.fraudes.siniestros.dto.ProveedorDTO">
        UPDATE T_PROVEEDORES
        SET V_NOMBRE = #{vNombre}
        WHERE I_PROVEE_ID = #{iProveeID}
    </update>

    <select id="obtenerProveedor" resultMap="ProveedorDTOResultado">
        SELECT * FROM T_PROVEEDORES WHERE I_PROVEE_ID = #{id}
    </select>

    <select id="existeProveedor" parameterType="String" resultType="boolean">
        SELECT COUNT(*) > 0 FROM T_PROVEEDORES WHERE V_NOMBRE = #{nombre}
    </select>

</mapper>
