<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qualitas.portal.fraudes.account.Infrastructure.dao.AutoModeloDao">

    <!-- Inserta un nuevo modelo de auto -->
    <insert id="crearAutoModelo" useGeneratedKeys="true" keyProperty="iCatalogoAutoModeloId">
        INSERT INTO T_CATALOGO_AUTOS_MODELO (
            I_AUTO_ID,
            V_DESCRIPCION,
            D_FECHA_CREACION,
            I_USUARIO_CREACION
        ) VALUES (
                     #{iAutoId},
                     #{vDescripcion},
                     #{dFechaCreacion},
                     #{iUsuarioCreacion}
                 )
    </insert>

    <!-- Selecciona un modelo de auto por ID -->
    <select id="obtenerAutoModelo" resultMap="AutoModeloResultado">
        SELECT
            I_CATALO_AUTO_MODELO_ID,
            I_AUTO_ID,
            V_DESCRIPCION,
            D_FECHA_CREACION,
            I_USUARIO_CREACION
        FROM T_CATALOGO_AUTOS_MODELO
        WHERE I_CATALO_AUTO_MODELO_ID = #{iCatalogoAutoModeloId}
    </select>

    <!-- ResultMap para mapear el resultado de la base de datos al modelo -->
    <resultMap id="AutoModeloResultado" type="com.qualitas.portal.fraudes.account.domain.model.AutoModelo">
        <id property="iCatalogoAutoModeloId" column="I_CATALO_AUTO_MODELO_ID"/>
        <result property="iAutoId" column="I_AUTO_ID"/>
        <result property="vDescripcion" column="V_DESCRIPCION"/>
        <result property="dFechaCreacion" column="D_FECHA_CREACION"/>
        <result property="iUsuarioCreacion" column="I_USUARIO_CREACION"/>
    </resultMap>

    <!-- Actualiza un modelo de auto -->
    <update id="actualizarAutoModelo" parameterType="com.qualitas.portal.fraudes.account.domain.model.AutoModelo">
        UPDATE T_CATALOGO_AUTOS_MODELO
        SET
            I_AUTO_ID = #{iAutoId},
            V_DESCRIPCION = #{vDescripcion},
            D_FECHA_CREACION = #{dFechaCreacion},
            I_USUARIO_CREACION = #{iUsuarioCreacion}
        WHERE I_CATALO_AUTO_MODELO_ID = #{iCatalogoAutoModeloId}
    </update>

    <!-- Lista todos los modelos de autos -->
    <select id="listarAutoModelo" resultMap="AutoModeloResultado">
        SELECT
            I_CATALO_AUTO_MODELO_ID,
            I_AUTO_ID,
            V_DESCRIPCION,
            D_FECHA_CREACION,
            I_USUARIO_CREACION
        FROM T_CATALOGO_AUTOS_MODELO
    </select>

    <!-- Elimina un modelo de auto por ID -->
    <delete id="eliminarAutoModelo">
        DELETE FROM T_CATALOGO_AUTOS_MODELO
        WHERE I_CATALO_AUTO_MODELO_ID = #{iCatalogoAutoModeloId}
    </delete>

</mapper>
