<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qualitas.portal.fraudes.account.Infrastructure.dao.AutoDao">

    <!-- Inserta un nuevo auto -->
    <insert id="crearAuto" useGeneratedKeys="true" keyProperty="iAutoId">
        INSERT INTO T_CATALOGO_AUTOS (
        V_DESCRIPCION,
        D_FECHA_CREACION,
        I_USUARIO_CREACION
        ) VALUES (
        #{vDescripcion},
        #{dFechaCreacion},
        #{iUsuarioCreacion}  <!-- Nuevo campo -->
        )
    </insert>

    <!-- Selecciona un auto por ID -->
    <select id="obtenerAuto" resultMap="AutoResultado">
        SELECT
        I_CATALO_AUTO_ID,
        V_DESCRIPCION,
        D_FECHA_CREACION,
        I_USUARIO_CREACION   <!-- Nuevo campo -->
        FROM T_CATALOGO_AUTOS
        WHERE I_CATALO_AUTO_ID = #{id}
    </select>

    <!-- ResultMap para mapear el resultado de la base de datos al modelo -->
    <resultMap id="AutoResultado" type="com.qualitas.portal.fraudes.account.domain.model.Auto">
        <id property="iAutoId" column="I_CATALO_AUTO_ID"/>
        <result property="vDescripcion" column="V_DESCRIPCION"/>
        <result property="dFechaCreacion" column="D_FECHA_CREACION"/>
        <result property="iUsuarioCreacion" column="I_USUARIO_CREACION"/>  <!-- Nuevo campo -->
    </resultMap>

    <!-- Actualiza un auto -->
    <update id="actualizarAuto" parameterType="com.qualitas.portal.fraudes.account.domain.model.Auto">
        UPDATE T_CATALOGO_AUTOS
        SET
        V_DESCRIPCION = #{vDescripcion},
        D_FECHA_CREACION = #{dFechaCreacion},
        I_USUARIO_CREACION = #{iUsuarioCreacion}  <!-- Nuevo campo -->
        WHERE I_CATALO_AUTO_ID = #{iAutoId}
    </update>

    <!-- Lista todos los autos -->
    <select id="listarAuto" resultMap="AutoResultado">
        SELECT
        I_CATALO_AUTO_ID,
        V_DESCRIPCION,
        D_FECHA_CREACION,
        I_USUARIO_CREACION  <!-- Nuevo campo -->
        FROM T_CATALOGO_AUTOS
    </select>

    <!-- Elimina un auto por ID -->
    <delete id="eliminarAuto">
        DELETE FROM T_CATALOGO_AUTOS
        WHERE I_CATALO_AUTO_ID = #{id}
    </delete>

</mapper>
