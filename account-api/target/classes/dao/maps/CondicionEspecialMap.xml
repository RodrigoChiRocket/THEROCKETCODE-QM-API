<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qualitas.portal.fraudes.account.dao.CondicionEspecialDao">

    <!-- Mapper para obtener una CondiciÃ³n Especial por ID -->
    <select id="obtenerCondicionEspecial" parameterType="java.math.BigDecimal" resultMap="CondicionEspecialResult">
        SELECT * FROM T_CONDICIONES_ESPECIALES
        WHERE I_COND_ESP_ID = #{id}
    </select>

    <!-- ResultMap para mapear el resultado a la clase CondicionEspecial -->
    <resultMap id="CondicionEspecialResult" type="com.qualitas.portal.fraudes.account.model.CondicionEspecial">
        <id property="iCondEspId" column="I_COND_ESP_ID"/>
        <result property="vTipo" column="V_TIPO"/>
        <result property="vDescuentoCondicion" column="V_DESCUENTO_CONDICION"/>
        <result property="vCondiciones" column="V_CONDICONES"/>
        <result property="iValor" column="I_VALOR"/>
        <result property="vDescuentoValor" column="V_DESCUENTO_VALOR"/>
        <result property="dFechaInicio" column="D_FECHA_INICIO"/>
        <result property="dFechaFin" column="D_FECHA_FIN"/>
        <result property="vMkr" column="V_MKR"/>
        <result property="iSiniestroId" column="I_SINIESTRO_ID"/>
    </resultMap>

</mapper>
