<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>account-fraudes-api</display-name>

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
       classpath:config/spring/application-beans-util.xml,
       classpath:config/spring/application-beans-dao.xml,
       classpath:config/spring/application-beans-service.xml
     </param-value>
   </context-param>

   <context-param>
     <param-name>defaultHtmlEscape</param-name>
     <param-value>true</param-value>
   </context-param>

   <servlet>
     <servlet-name>account-fraudes-api</servlet-name>
     <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
     <init-param>
       <param-name>contextConfigLocation</param-name>
       <param-value>/WEB-INF/spring/spring-context.xml</param-value>
     </init-param>
     <load-on-startup>1</load-on-startup>
   </servlet>

   <servlet-mapping>
     <servlet-name>account-fraudes-api</servlet-name>
     <url-pattern>/*</url-pattern>
   </servlet-mapping>

   <listener>
     <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
   </listener>

   <welcome-file-list>
     <welcome-file>/account-fraudes-api</welcome-file>
   </welcome-file-list>

   <session-config>
     <session-timeout>30</session-timeout>
     <cookie-config>
       <http-only>true</http-only>
       <secure>true</secure>
     </cookie-config>
     <tracking-mode>COOKIE</tracking-mode>
   </session-config>

   <security-constraint>
     <web-resource-collection>
       <web-resource-name>secure</web-resource-name>
       <url-pattern>/secure/*</url-pattern>
     </web-resource-collection>
     <auth-constraint>
       <role-name>administrator</role-name>
     </auth-constraint>
   </security-constraint>

    <!-- Configuraci贸n del filtro CORS -->
    <filter>
        <filter-name>FiltroCORS</filter-name>
        <filter-class>com.qualitas.portal.accountfraudesapi.configuracion.cors.FiltroCORS</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroCORS</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Configuraci贸n del filtro CRLF -->
    <filter>
        <filter-name>FiltroCRLF</filter-name>
        <filter-class>com.qualitas.portal.accountfraudesapi.configuracion.filter.FiltroCRLF</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroCRLF</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Configuraci贸n del filtro XSS -->
    <filter>
        <filter-name>FiltroXSS</filter-name>
        <filter-class>com.qualitas.portal.accountfraudesapi.configuracion.filter.FiltroXSS</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroXSS</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Configuraci贸n del filtro JWT -->
    <filter>
        <filter-name>FiltroJWT</filter-name>
        <filter-class>com.qualitas.portal.accountfraudesapi.configuracion.filter.FiltroJWT</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroJWT</filter-name>
        <url-pattern>/api/cuenta/obtener-usuario</url-pattern>
        <url-pattern>/api/cuenta/autenticar</url-pattern>
        <url-pattern>/api/cuenta/obtener-rol</url-pattern>
        <url-pattern>/api/cuenta/obtener-roles</url-pattern>
        <url-pattern>/api/cuenta/verificar-rol-usuario</url-pattern>
        <url-pattern>/api/cuenta/obtener-user-id</url-pattern>
        <url-pattern>/api/cuenta/actualizar</url-pattern>
        <url-pattern>/api/cuenta/eliminar-usuario</url-pattern>
        <url-pattern>/api/cuenta/obtener-usuarios-rol</url-pattern>
        <url-pattern>/api/cuenta/obtener-usuario-by-abogado</url-pattern>
        <url-pattern>/api/cuenta/obtener-token-data</url-pattern>
    </filter-mapping>

</web-app>
