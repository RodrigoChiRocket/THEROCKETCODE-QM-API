<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qualitas.portal.fraudes.account.Infrastructure.dao.AutoModeloDao">

    <!-- Inserta un nuevo modelo de auto -->
    <insert id="crearAutoModelo" parameterType="com.qualitas.portal.fraudes.account.domain.model.AutoModelo" useGeneratedKeys="true" keyProperty="iCatalogoAutoModeloId">
        INSERT INTO T_AUTOS_MODELO_MC (
        I_AUTO_MARCA_CLAVE,
        V_NOMBRE,
        D_FECHA_CREACION
        ) VALUES (
        #{iAutoMarcaClave},
        #{vNombre},
        #{dFechaCreacion}
        )
        <selectKey keyProperty="iAutoModeloId" resultType="BigDecimal" order="AFTER">
            SELECT SEQ_CATALO_AUTO_MODELO_ID.CURRVAL FROM dual
        </selectKey>
    </insert>

    <!-- Selecciona un modelo de auto por ID -->
    <select id="obtenerAutoModelo" resultMap="AutoModeloResultado">
        SELECT
            I_AUTO_MODELO_ID,
            I_AUTO_MARCA_CLAVE,
            V_NOMBRE,
            D_FECHA_CREACION
        FROM T_AUTOS_MODELO_MC
        WHERE I_AUTO_MODELO_ID = #{iAutoModeloId}
    </select>

    <!-- ResultMap para mapear el resultado de la base de datos al modelo -->
    <resultMap id="AutoModeloResultado" type="com.qualitas.portal.fraudes.account.domain.model.AutoModelo">
        <id property="iAutoModeloId" column="I_AUTO_MODELO_ID" jdbcType="NUMERIC"/>
        <result property="iAutoMarcaClave" column="I_AUTO_MARCA_CLAVE" jdbcType="NUMERIC"/>
        <result property="vNombre" column="V_NOMBRE" jdbcType="VARCHAR"/>
        <result property="dFechaCreacion" column="D_FECHA_CREACION" jdbcType="DATE"/>
    </resultMap>

    <!-- Actualiza un modelo de auto -->
    <update id="actualizarAutoModelo" parameterType="com.qualitas.portal.fraudes.account.domain.model.AutoModelo">
        UPDATE T_AUTOS_MODELO_MC
        SET
            I_AUTO_MARCA_CLAVE = #{iAutoMarcaClave},
            V_NOMBRE = #{vNombre},
            D_FECHA_CREACION = #{dFechaCreacion}
        WHERE I_AUTO_MODELO_ID = #{iAutoModeloId}
    </update>

    <!-- Lista todos los modelos de autos -->
    <select id="listarAutoModelo" resultMap="AutoModeloResultado">
        SELECT
            I_AUTO_MODELO_ID,
            I_AUTO_MARCA_CLAVE,
            V_NOMBRE,
            D_FECHA_CREACION
        FROM T_AUTOS_MODELO_MC
    </select>

    <!-- Elimina un modelo de auto por ID -->
    <delete id="eliminarAutoModelo">
        DELETE FROM T_AUTOS_MODELO_MC
        WHERE I_AUTO_MODELO_ID = #{iAutoModeloId}
    </delete>

</mapper>